{
	"name": "smart-home-finder",
	"version": "0.0.0",
	"private": true,
	"description": "A smart home device finder project.",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @smart-home-finder/frontend run dev",
		"build": "pnpm --filter @smart-home-finder/frontend run build",
		"preview": "pnpm --filter @smart-home-finder/frontend run preview",
		"check": "pnpm --filter @smart-home-finder/frontend run check",
		"check:watch": "pnpm --filter @smart-home-finder/frontend run check:watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "pnpm run test:unit && pnpm run test:e2e",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"db:start": "docker compose up -d",
		"db:stop": "docker compose down",
		"db:push": "pnpm --filter @smart-home-finder/frontend run db:push",
		"db:migrate": "pnpm --filter @smart-home-finder/frontend run db:migrate",
		"db:studio": "pnpm --filter @smart-home-finder/frontend run db:studio",
		"db:seed": "pnpm --filter @smart-home-finder/frontend run db:seed",
		"db:update-prices": "pnpm --filter @smart-home-finder/scraper run update-prices"
	},
	"devDependencies": {
		"@clerk/backend": "^1.21.4",
		"@eslint/compat": "^1.2.3",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-vercel": "^5.5.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.4.11",
		"vitest": "^2.0.4"
	},
	"dependencies": {
		"drizzle-orm": "^0.38.3"
	}
}
